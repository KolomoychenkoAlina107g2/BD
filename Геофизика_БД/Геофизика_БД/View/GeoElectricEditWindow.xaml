<Window x:Class="Геофизика_БД.View.GeoElectricEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Геофизика_БД.View"
        mc:Ignorable="d"
        Title="Edit Geo Electric Discharges" Height="300" Width="210">
    <Grid Margin="10,0,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Глубина:" Grid.Row="0"/>
        <TextBox x:Name="DepthTextBox" Grid.Row="1" Margin="5,5,0,5"/>

        <Label Content="Электрическое сопротивление:" Grid.Row="2"/>
        <TextBox x:Name="ResistanceTextBox" Grid.Row="4" Margin="10,19,0,-7"/>

        <Label Content="Координаты:" Grid.Row="4" Margin="5,37,-5,-37"/>
        <TextBox x:Name="CoordinatesTextBox" Grid.Row="4" Margin="10,67,0,-57"/>

        <Button x:Name="SaveButton" Content="Сохранить" Grid.Row="4" Margin="5,131,5,-121"/>
    </Grid>
</Window>